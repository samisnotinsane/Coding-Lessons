<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.udemy.sameen.myfirstandroidapp.MainActivity">

    <TextView
        android:text="@string/idMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff700"
        android:background="#69e13d"
        android:textSize="50sp"
        android:padding="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="That&apos;s a cool story bro"
        android:id="@+id/textView"
        android:layout_marginBottom="59dp"
        android:typeface="monospace"
        android:textIsSelectable="false"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:background="#bf1b1b"
        android:textColor="#efeeee"
        android:padding="10dp"
        android:singleLine="false"
        android:textSize="19sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
